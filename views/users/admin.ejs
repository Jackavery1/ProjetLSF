<!DOCTYPE html>
<html lang="fr">
  <head>
    <title>LSF - Administration</title>
    <%- include('../partials/head') %>
  </head>

  <body>
    <%- include('../partials/navbar') %>

    <main class="min-h-screen bg-[#fff3eb] py-12 px-4">
      <div class="max-w-7xl mx-auto">
        <h1 class="text-center text-4xl font-bold text-[#00a8a3] mb-8">
          Tableau de bord administrateur
        </h1>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
          <div class="bg-white rounded-xl shadow-lg p-6">
            <h2 class="text-2xl font-bold text-[#00a8a3] mb-2">
              <%= stats.utilisateurs %>
            </h2>
            <p class="text-gray-600">Utilisateurs</p>
          </div>

          <div class="bg-white rounded-xl shadow-lg p-6">
            <h2 class="text-2xl font-bold text-[#00a8a3] mb-2">
              <%= stats.mots %>
            </h2>
            <p class="text-gray-600">Mots dans le dictionnaire</p>
          </div>

          <div class="bg-white rounded-xl shadow-lg p-6">
            <h2 class="text-2xl font-bold text-[#00a8a3] mb-2">
              <%= stats.ressources %>
            </h2>
            <p class="text-gray-600">Ressources</p>
          </div>
        </div>

        <!-- Section : Liste des utilisateurs récents -->
        <!-- Affiche les 5 derniers utilisateurs inscrits dans le système -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
          <h2 class="text-2xl font-bold text-[#00a8a3] mb-4">
            Utilisateurs récents
          </h2>
          <% if (utilisateursRecents && utilisateursRecents.length > 0) { %>
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="border-b">
                  <th class="text-left py-3 px-4 text-gray-700">Nom</th>
                  <th class="text-left py-3 px-4 text-gray-700">Email</th>
                  <th class="text-left py-3 px-4 text-gray-700">Rôle</th>
                </tr>
              </thead>
              <tbody>
                <% utilisateursRecents.forEach(user => { %>
                <tr class="border-b hover:bg-gray-50">
                  <td class="py-3 px-4"><%= user.nom %></td>
                  <td class="py-3 px-4"><%= user.email %></td>
                  <td class="py-3 px-4">
                    <span
                      class="px-2 py-1 rounded text-sm <%= user.role === 'admin' ? 'bg-[#00a8a3] text-white' : 'bg-gray-200 text-gray-700' %>"
                    >
                      <%= user.role === 'admin' ? 'Admin' : 'Utilisateur' %>
                    </span>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
          <% } else { %>
          <p class="text-gray-600">Aucun utilisateur enregistré</p>
          <% } %>
        </div>

        <!-- Section : Actions rapides pour l'administrateur -->
        <!-- Liens rapides vers les pages de consultation -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
          <h2 class="text-2xl font-bold text-[#00a8a3] mb-4">
            Actions rapides
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <!-- Lien vers la page dictionnaire pour consulter les mots -->
            <a
              href="/dictionnaire"
              class="block p-4 border-2 border-[#00a8a3] rounded-lg hover:bg-[#00a8a3] hover:text-white transition text-center"
            >
              Consulter le dictionnaire
            </a>
            <!-- Lien vers la page ressources pour consulter les ressources -->
            <a
              href="/ressources"
              class="block p-4 border-2 border-[#00a8a3] rounded-lg hover:bg-[#00a8a3] hover:text-white transition text-center"
            >
              Consulter les ressources
            </a>
          </div>
        </div>

        <!-- Section : Ajouter du contenu -->
        <!-- Formulaires d'ajout directement intégrés dans l'espace admin -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
          <!-- Formulaire d'ajout de mot -->
          <div class="bg-white rounded-xl shadow-lg p-6">
            <h2 class="text-2xl font-bold text-[#00a8a3] mb-4">
              Ajouter un mot
            </h2>
            <form action="/api/dictionnaire" method="POST" class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  Mot <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  name="mot"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#00a8a3] focus:border-transparent outline-none"
                  placeholder="Ex: Bonjour"
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  Catégorie
                </label>
                <input
                  type="text"
                  name="categorie"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#00a8a3] focus:border-transparent outline-none"
                  placeholder="Ex: Salutations"
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  Définition <span class="text-red-500">*</span>
                </label>
                <textarea
                  name="definition"
                  required
                  rows="3"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#00a8a3] focus:border-transparent outline-none"
                  placeholder="Définition du mot en LSF"
                ></textarea>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  Lien vidéo YouTube <span class="text-red-500">*</span>
                </label>
                <input
                  type="url"
                  name="video"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#00a8a3] focus:border-transparent outline-none"
                  placeholder="https://www.youtube.com/embed/..."
                />
              </div>
              <button
                type="submit"
                class="w-full bg-[#00a8a3] hover:bg-[#00928e] text-white font-semibold py-3 px-4 rounded-lg shadow transition"
              >
                Ajouter le mot
              </button>
            </form>
          </div>

          <!-- Formulaire d'ajout de ressource -->
          <div class="bg-white rounded-xl shadow-lg p-6">
            <h2 class="text-2xl font-bold text-[#00a8a3] mb-4">
              Ajouter une ressource
            </h2>
            <form action="/api/ressources" method="POST" class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  Titre <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  name="titre"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#00a8a3] focus:border-transparent outline-none"
                  placeholder="Ex: Dictionnaire LSF en ligne"
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  Catégorie
                </label>
                <input
                  type="text"
                  name="categorie"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#00a8a3] focus:border-transparent outline-none"
                  placeholder="Ex: Dictionnaires, YouTube, etc."
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  Description
                </label>
                <textarea
                  name="description"
                  rows="3"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#00a8a3] focus:border-transparent outline-none"
                  placeholder="Description de la ressource"
                ></textarea>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  Lien <span class="text-red-500">*</span>
                </label>
                <input
                  type="url"
                  name="lien"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#00a8a3] focus:border-transparent outline-none"
                  placeholder="https://..."
                />
              </div>
              <button
                type="submit"
                class="w-full bg-[#00a8a3] hover:bg-[#00928e] text-white font-semibold py-3 px-4 rounded-lg shadow transition"
              >
                Ajouter la ressource
              </button>
            </form>
          </div>
        </div>

        <!-- Bouton de déconnexion en bas de page -->
        <div class="mt-8 flex justify-center">
          <form action="/api/auth/logout" method="POST">
            <button
              type="submit"
              class="bg-[#f46b5e] hover:bg-[#e25b4e] text-white font-semibold py-3 px-8 rounded-lg shadow transition"
            >
              Se déconnecter
            </button>
          </form>
        </div>
      </div>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
