<!DOCTYPE html>
<html lang="fr">
  <head>
    <title>LSF - Administration</title>
    <%- include('../partials/head') %>
  </head>

  <body>
    <%- include('../partials/navbar') %>

    <main class="min-h-screen bg-[#fff3eb] py-12 px-4">
      <div class="max-w-7xl mx-auto">
        <h1 class="text-center text-4xl font-bold text-[#00a8a3] mb-8">
          Tableau de bord administrateur
        </h1>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
          <div class="bg-white rounded-xl shadow-lg p-6">
            <h2 class="text-2xl font-bold text-[#00a8a3] mb-2">
              <%= stats.utilisateurs %>
            </h2>
            <p class="text-gray-600">Utilisateurs</p>
          </div>

          <div class="bg-white rounded-xl shadow-lg p-6">
            <h2 class="text-2xl font-bold text-[#00a8a3] mb-2">
              <%= stats.mots %>
            </h2>
            <p class="text-gray-600">Mots dans le dictionnaire</p>
          </div>

          <div class="bg-white rounded-xl shadow-lg p-6">
            <h2 class="text-2xl font-bold text-[#00a8a3] mb-2">
              <%= stats.ressources %>
            </h2>
            <p class="text-gray-600">Ressources</p>
          </div>
        </div>

        <!-- Section : Mots et ressources ajoutés -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
          <h2 class="text-2xl font-bold text-[#00a8a3] mb-4">
            Mots et ressources ajoutés
          </h2>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Mots récents -->
            <div>
              <h3 class="text-lg font-semibold text-[#f46b5e] mb-3">
                Derniers mots
              </h3>
              <% if (motsRecents && motsRecents.length > 0) { %>
              <div class="space-y-2">
                <% motsRecents.forEach(mot => { %>
                <div class="border rounded-lg p-3">
                  <p class="font-semibold text-gray-900"><%= mot.mot %></p>
                  <p class="text-sm text-gray-600">
                    <%= mot.categorie || 'Général' %>
                  </p>
                  <% if (mot.definition) { %>
                  <p class="text-xs text-gray-500 mt-1 line-clamp-2">
                    <%= mot.definition %>
                  </p>
                  <% } %>
                </div>
                <% }); %>
              </div>
              <% } else { %>
              <p class="text-gray-600 text-sm">Aucun mot ajouté</p>
              <% } %>
            </div>

            <!-- Ressources récentes -->
            <div>
              <h3 class="text-lg font-semibold text-[#f46b5e] mb-3">
                Dernières ressources
              </h3>
              <% if (ressourcesRecentes && ressourcesRecentes.length > 0) { %>
              <div class="space-y-2">
                <% ressourcesRecentes.forEach(ressource => { %>
                <div class="border rounded-lg p-3">
                  <p class="font-semibold text-gray-900">
                    <%= ressource.titre %>
                  </p>
                  <p class="text-sm text-gray-600">
                    <%= ressource.categorie || 'Général' %>
                  </p>
                  <% if (ressource.description) { %>
                  <p class="text-xs text-gray-500 mt-1 line-clamp-2">
                    <%= ressource.description %>
                  </p>
                  <% } %>
                </div>
                <% }); %>
              </div>
              <% } else { %>
              <p class="text-gray-600 text-sm">Aucune ressource ajoutée</p>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Section : Ajouter du contenu -->
        <!-- Formulaires d'ajout directement intégrés dans l'espace admin -->
        <%- include('../partials/formulaires') %>

        <!-- Bouton de déconnexion en bas de page -->
        <div class="mt-8 flex justify-center">
          <form action="/api/auth/logout" method="POST">
            <button
              type="submit"
              class="bg-[#f46b5e] hover:bg-[#e25b4e] text-white font-semibold py-3 px-8 rounded-lg shadow transition"
            >
              Se déconnecter
            </button>
          </form>
        </div>
      </div>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
