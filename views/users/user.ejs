<!DOCTYPE html>
<html lang="fr">
  <head>
    <title>LSF - Mon profil</title>
    <%- include('../partials/head') %>
  </head>

  <body>
    <%- include('../partials/navbar') %>

    <main class="min-h-screen bg-[#fff3eb] py-12 px-4">
      <div class="max-w-7xl mx-auto">
        <h1 class="text-center text-4xl font-bold text-[#00a8a3] mb-8">
          Mon profil
        </h1>

        <!-- Carte résumé utilisateur -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
          <div class="mb-4">
            <h2 class="text-xl font-bold text-[#00a8a3]">Informations</h2>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <p class="text-sm text-gray-600">Nom</p>
              <p class="text-base font-medium text-gray-900"><%= user.nom %></p>
            </div>
            <div>
              <p class="text-sm text-gray-600">Email</p>
              <p class="text-base font-medium text-gray-900">
                <%= user.email %>
              </p>
            </div>
            <div>
              <p class="text-sm text-gray-600">Votre score au quiz est</p>
              <p class="text-base font-medium text-[#00a8a3]">0 points</p>
            </div>
          </div>
        </div>

        <!-- Formulaires d'ajout  -->
        <%- include('../partials/formulaires') %>

        <!-- Bouton de déconnexion en bas de page -->
        <div class="mt-8 flex justify-center">
          <form action="/api/auth/logout" method="POST">
            <button
              type="submit"
              class="bg-[#f46b5e] hover:bg-[#e25b4e] text-white font-semibold py-3 px-8 rounded-lg shadow transition"
            >
              Se déconnecter
            </button>
          </form>
        </div>
      </div>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
