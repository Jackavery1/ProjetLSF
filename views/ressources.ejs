<!DOCTYPE html>
<html lang="fr">
  <head>
    <title>LSF - Ressources</title>
    <%- include('partials/head') %>
    <style>
      :root {
        --brand-primary: #f46b5e;
        --brand-teal: #00a8a3;
        --bg: #fcf6f0;
        --ink: #2b2b2b;
      }
      /* jolis scrollbars (optionnel) */
      ::-webkit-scrollbar {
        height: 10px;
        width: 10px;
      }
      ::-webkit-scrollbar-thumb {
        background: #e7d9cc;
        border-radius: 999px;
      }
    </style>
  </head>

  <body>
    <%- include('partials/navbar') %>

    <!-- header -->
    <header class="relative overflow-hidden">
      <div class="max-w-6xl mx-auto px-4 py-10 md:py-14">
        <div class="grid md:grid-cols-2 gap-8 items-center">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold text-[#00a8a3]">
              Ressources utiles pour apprendre et pratiquer la
              <span class="text-[color:var(--brand-teal)]">LSF</span>
            </h2>
            <p class="mt-3 text-[15px] text-neutral-700">
              Dictionnaires, cours, vidéos, associations, jeux, cartes… Tout au
              même endroit.
            </p>
          </div>
          <div class="relative">
            <div
              class="absolute -inset-6 -z-10 rounded-3xl bg-gradient-to-br from-[color:var(--brand-teal)]/15 via-[#ffd9d5]/50 to-[color:var(--brand-primary)]/20 blur-2xl"
            ></div>
          </div>
        </div>

        <!-- Filtres -->
        <div class="mt-8 grid gap-4">
          <div class="relative">
            <input
              id="searchInput"
              type="text"
              placeholder="Rechercher une ressource (ex. dictionnaire, YouTube, association)…"
              class="w-full rounded-xl border border-neutral-300/70 bg-white px-4 py-3 shadow-sm focus:outline-none focus:ring-4 focus:ring-[color:var(--brand-teal)]/25"
            />
          </div>

          <!-- Filtres catégories -->
          <div id="filters" class="flex flex-wrap gap-2 text-sm">
            <!-- Donne à ces boutons data-cat pour filtrer -->
            <button
              class="catBtn rounded-full border px-3 py-1.5 bg-white shadow hover:border-[color:var(--brand-teal)]"
              data-cat="all"
            >
              Toutes
            </button>
            <button
              class="catBtn rounded-full border px-3 py-1.5 bg-white shadow hover:border-[color:var(--brand-teal)]"
              data-cat="Dictionnaires"
            >
              Dictionnaires
            </button>
            <button
              class="catBtn rounded-full border px-3 py-1.5 bg-white shadow hover:border-[color:var(--brand-teal)]"
              data-cat="Formations"
            >
              Formations
            </button>
            <button
              class="catBtn rounded-full border px-3 py-1.5 bg-white shadow hover:border-[color:var(--brand-teal)]"
              data-cat="Associations"
            >
              Associations
            </button>
            <button
              class="catBtn rounded-full border px-3 py-1.5 bg-white shadow hover:border-[color:var(--brand-teal)]"
              data-cat="Livres"
            >
              Livres
            </button>
            <button
              class="catBtn rounded-full border px-3 py-1.5 bg-white shadow hover:border-[color:var(--brand-teal)]"
              data-cat="Jeux"
            >
              Jeux
            </button>
            <button
              class="catBtn rounded-full border px-3 py-1.5 bg-white shadow hover:border-[color:var(--brand-teal)]"
              data-cat="Instagram"
            >
              Instagram
            </button>
            <button
              class="catBtn rounded-full border px-3 py-1.5 bg-white shadow hover:border-[color:var(--brand-teal)]"
              data-cat="YouTube"
            >
              YouTube
            </button>
            <button
              class="catBtn rounded-full border px-3 py-1.5 bg-white shadow hover:border-[color:var(--brand-teal)]"
              data-cat="Cartes & lieux"
            >
              Cartes & lieux
            </button>
          </div>
        </div>
      </div>
    </header>

    <!-- Liste des ressources -->
    <main class="max-w-6xl mx-auto px-4 pb-16">
      <% if (!ressources || ressources.length === 0) { %>
      <div class="rounded-2xl border bg-white p-8 text-center shadow">
        <p>Aucune ressource pour le moment.</p>
      </div>
      <% } else { %>

      <!-- Grille des ressources -->
      <ul id="ressourcesGrid" class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% (ressources || []).forEach((r, i) => { %>
        <li
          class="resCard group relative rounded-2xl border border-neutral-200 bg-white shadow-sm hover:shadow-lg transition overflow-hidden"
          data-title="<%= (r.titre || '').toLowerCase() %>"
          data-desc="<%= (r.description || '').toLowerCase() %>"
          data-cat="<%= (r.categorie || 'Autre') %>"
        >
          <!-- Bouton suppression-->
          <form
            action="/api/ressources/<%= r._id %>"
            method="POST"
            class="absolute top-2 right-2"
            onsubmit="return confirm('Supprimer cette ressource ?');"
          >
            <button
              type="submit"
              class="text-gray-400 hover:text-red-600 bg-white/70 rounded-full p-1 shadow"
              title="Supprimer"
            >
              ✖
            </button>
          </form>

          <div class="p-5">
            <div class="flex items-center justify-between gap-3">
              <span
                class="inline-flex items-center rounded-full bg-[color:var(--brand-teal)]/10 text-[color:var(--brand-teal)] px-3 py-1 text-xs font-semibold"
              >
                <%= r.categorie || 'Autre' %>
              </span>
            </div>

            <h3
              class="mt-3 text-lg font-bold text-[color:var(--brand-primary)] group-hover:underline underline-offset-4"
            >
              <%= r.titre %>
            </h3>

            <% if (r.description) { %>
            <p class="mt-1.5 text-[15px] text-neutral-700 line-clamp-3">
              <%= r.description %>
            </p>
            <% } %>

            <div class="mt-4 flex items-center justify-between">
              <a
                href="<%= r.lien %>"
                target="_blank"
                rel="noopener"
                class="inline-flex items-center gap-2 rounded-lg bg-[color:var(--brand-teal)] px-3 py-2 text-white text-sm font-semibold shadow hover:bg-[#00928e] focus:outline-none focus:ring-4 focus:ring-[color:var(--brand-teal)]/30"
              >
                Accéder
              </a>
            </div>
          </div>
        </li>
        <% }) %>
      </ul>
      <% } %>
      <!-- Formulaire d'ajout -->
      <section class="bg-white rounded-xl p-4 shadow-lg mt-12">
        <h3 class="text-2xl font-semibold text-[#00a8a3] mb-4">
          Ajouter une ressource
        </h3>
        <form
          action="/api/ressources"
          method="POST"
          class="grid grid-cols-1 md:grid-cols-2 gap-4"
        >
          <div>
            <label class="block mb-1 font-medium">Titre</label>
            <input
              type="text"
              name="titre"
              required
              class="w-full px-4 py-2 border rounded focus:ring-[#00a8a3]"
            />
          </div>
          <div>
            <label class="block mb-1 font-medium">Description</label>
            <input
              type="text"
              name="description"
              class="w-full px-4 py-2 border rounded focus:ring-[#00a8a3]"
            />
          </div>
          <div>
            <label class="block mb-1 font-medium">Catégorie</label>
            <input
              type="text"
              name="categorie"
              class="w-full px-4 py-2 border rounded focus:ring-[#00a8a3]"
            />
          </div>
          <div>
            <label class="block mb-1 font-medium">Lien</label>
            <input
              type="url"
              name="lien"
              required
              class="w-full px-4 py-2 border rounded focus:ring-[#00a8a3]"
            />
          </div>
          <div class="md:col-span-2 text-right">
            <button
              type="submit"
              class="bg-[#00a8a3] hover:bg-[#00928e] text-white px-6 py-2 rounded-lg shadow"
            >
              Ajouter la ressource
            </button>
          </div>
        </form>
      </section>
    </main>

    <!-- FOOTER -->
    <%- include('partials/footer') %>

    <!-- SCRIPTS -->
    <script>
      // Recherche + filtres
      const searchInput = document.getElementById("searchInput");
      const cards = Array.from(document.querySelectorAll(".resCard"));
      const catBtns = Array.from(document.querySelectorAll(".catBtn"));
      let activeCat = "all";

      function applyFilters() {
        const q = (searchInput?.value || "").trim().toLowerCase();
        cards.forEach((card) => {
          const title = card.dataset.title || "";
          const desc = card.dataset.desc || "";
          const cat = card.dataset.cat || "Autre";
          const matchText =
            !q ||
            title.includes(q) ||
            desc.includes(q) ||
            cat.toLowerCase().includes(q);
          const matchCat = activeCat === "all" || cat === activeCat;
          card.style.display = matchText && matchCat ? "" : "none";
        });
      }

      searchInput?.addEventListener("input", applyFilters);
      catBtns.forEach((btn) => {
        btn.addEventListener("click", () => {
          activeCat = btn.dataset.cat;
          catBtns.forEach((b) =>
            b.classList.remove(
              "ring-2",
              "ring-[color:var(--brand-teal)]/50",
              "border-[color:var(--brand-teal)]"
            )
          );
          btn.classList.add(
            "ring-2",
            "ring-[color:var(--brand-teal)]/50",
            "border-[color:var(--brand-teal)]"
          );
          applyFilters();
        });
      });
      // Marquer "Toutes" active au chargement
      const defaultBtn = document.querySelector('.catBtn[data-cat="all"]');
      defaultBtn?.classList.add(
        "ring-2",
        "ring-[color:var(--brand-teal)]/50",
        "border-[color:var(--brand-teal)]"
      );
    </script>
  </body>
</html>
