<!DOCTYPE html>
<html lang="fr">
  <head>
    <title>LSF - Dictionnaire</title>
    <%- include('partials/head') %>
  </head>

  <body>
    <%- include('partials/navbar') %>

    <!-- Contenu principal -->
    <main class="max-w-5xl mx-auto px-4 py-12">
      <h2 class="text-3xl font-bold text-center text-[#00a8a3] mb-10">
        Dictionnaire LSF
      </h2>

      <!-- Barre de recherche -->
      <form
        action="/dictionnaire"
        method="GET"
        class="mb-10 flex flex-col md:flex-row items-center gap-4"
      >
        <input
          type="text"
          name="mot"
          placeholder="Rechercher un mot..."
          class="w-full md:flex-1 px-4 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-[#00a8a3]"
          required
        />
        <button
          type="submit"
          class="bg-[#f46b5e] hover:bg-[#e25b4e] text-white px-6 py-2 rounded-lg shadow"
        >
          Rechercher
        </button>
      </form>

      <!-- Cartes des catégories -->
      <% if (typeof categoriesAvecMots !== 'undefined' &&
      categoriesAvecMots.length > 0 && typeof resultats === 'undefined') { %>
      <section class="mb-10">
        <h3 class="text-2xl font-bold text-center text-[#00a8a3] mb-6">
          Catégories de mots
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <% categoriesAvecMots.forEach((categorie, index) => { %> <% const
          isJaune = index % 2 === 1; %>
          <div
            class="<%= isJaune ? 'bg-[#fdd049] text-gray-800' : 'bg-[#00a8a3] text-white' %> rounded-xl p-4 text-center shadow"
          >
            <h4 class="text-lg font-bold mb-3"><%= categorie.nom %></h4>
            <div class="mt-3 text-left">
              <ul class="space-y-1.5">
                <% categorie.mots.forEach(mot => { %>
                <li class="text-sm">
                  <a
                    href="/dictionnaire?mot=<%= encodeURIComponent(mot) %>"
                    class="hover:underline"
                  >
                    • <%= mot %>
                  </a>
                </li>
                <% }); %>
              </ul>
            </div>
          </div>
          <% }); %>
        </div>
      </section>
      <% } %>

      <!-- Résultats -->
      <% if (Array.isArray(resultats) && resultats.length > 0) { %>
      <h3 class="text-xl font-semibold mb-6 text-gray-800">
        Résultats de recherche :
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <% resultats.forEach(mot => { %>
        <div class="bg-white rounded-xl p-5 shadow hover:shadow-lg transition">
          <h4 class="text-lg font-bold mb-2 text-[#f46b5e]"><%= mot.mot %></h4>
          <p class="mb-1">
            <strong>Définition :</strong> <%= mot.definition %>
          </p>
          <p class="mb-2"><strong>Catégorie :</strong> <%= mot.categorie %></p>
        </div>

        <div
          class="bg-white rounded-xl shadow hover:shadow-lg transition overflow-hidden border-2 border-[#00a8a3] relative"
        >
          <!-- Bouton suppression admin -->
          <% if (typeof userRole !== 'undefined' && userRole === 'admin') { %>
          <form
            action="/api/dictionnaire/<%= mot._id %>"
            method="POST"
            class="absolute top-2 right-2 z-10"
            onsubmit="return confirm('Supprimer ce mot et sa vidéo ?');"
          >
            <button
              type="submit"
              class="text-gray-400 hover:text-red-600 bg-white/70 rounded-full p-1 shadow"
              title="Supprimer"
            >
              ✖
            </button>
          </form>
          <% } %>
          <iframe
            class="w-full aspect-video"
            src="<%= mot.video %>"
            title="Vidéo YouTube - <%= mot.mot %>"
            frameborder="0"
            allow="accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            referrerpolicy="strict-origin-when-cross-origin"
            allowfullscreen
          ></iframe>
        </div>

        <% }) %>
      </div>
      <% } else if (typeof resultats !== 'undefined') { %>
      <p class="text-center text-gray-500 px-4">Aucun résultat trouvé</p>
      <% } %>
    </main>

    <%- include('partials/footer') %>
  </body>
</html>
