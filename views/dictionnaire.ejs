<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <title>LSF - Dictionnaire</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Tailwind -->
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <!-- Import police -->
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap"
      rel="stylesheet"
    />

    <style>
      body {
        background-color: #fcf6f0;
        font-family: "Open Sans", sans-serif;
        color: #2b2b2b;
      }
    </style>
  </head>

  <body>
    <!-- Barre de navigation -->
    <nav
      class="sticky top-0 z-50 backdrop-blur bg-[#f46b5e]/95 text-white shadow"
    >
      <div class="mx-auto max-w-7xl px-4 py-1">
        <div class="flex h-14 items-center justify-between">
          <!-- Logo -->
          <h1 class="text-lg md:text-xl font-bold">
            <a href="/" class="hover:text-white/80"
              >Langue des Signes Française</a
            >
          </h1>

          <!-- Pages -->
          <ul class="hidden items-center gap-6 text-sm md:flex">
            <li><a href="/" class="hover:opacity-90">Accueil</a></li>
            <li>
              <a href="/dictionnaire" class="hover:opacity-90">Dictionnaire</a>
            </li>
            <li><a href="/quizz" class="hover:opacity-90">Quizz</a></li>
            <li>
              <a href="/ressources" class="hover:opacity-90">Ressources</a>
            </li>
          </ul>

          <!-- Menu Mobile (details/summary) -->
          <details class="relative md:hidden group">
            <summary
              class="list-none cursor-pointer inline-flex h-9 w-9 items-center justify-center rounded-lg bg-white/15 hover:bg-white/25"
              aria-label="Ouvrir le menu"
            >
              <!-- Icône burger -->
              <svg
                class="h-5 w-5 group-open:hidden"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"
                />
              </svg>
              <!-- Icône quand open -->
              <svg
                class="hidden h-5 w-5 group-open:block"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M6 18L18 6M6 6l12 12"
                />
              </svg>
            </summary>

            <!-- Dropdown Mobile -->
            <div
              class="absolute right-0 mt-2 w-56 rounded-xl bg-[#f46b5e] shadow-lg ring-1 ring-black/10"
            >
              <ul class="grid gap-1 p-2 text-sm">
                <li>
                  <a href="/" class="block rounded px-3 py-2 hover:bg-white/10"
                    >Accueil</a
                  >
                </li>
                <li>
                  <a
                    href="/dictionnaire"
                    class="block rounded px-3 py-2 hover:bg-white/10"
                    >Dictionnaire</a
                  >
                </li>
                <li>
                  <a
                    href="/quizz"
                    class="block rounded px-3 py-2 hover:bg-white/10"
                    >Quizz</a
                  >
                </li>
                <li>
                  <a
                    href="/ressources"
                    class="block rounded px-3 py-2 hover:bg-white/10"
                    >Ressources</a
                  >
                </li>
              </ul>
            </div>
          </details>
        </div>
      </div>
    </nav>

    <!-- Contenu principal -->
    <main class="max-w-5xl mx-auto px-4 py-12">
      <h2 class="text-3xl font-bold text-center text-[#00a8a3] mb-10">
        Dictionnaire LSF
      </h2>

      <!-- Barre de recherche -->
      <form
        action="/dictionnaire"
        method="GET"
        class="mb-10 flex flex-col md:flex-row items-center gap-4"
      >
        <input
          type="text"
          name="mot"
          placeholder="Rechercher un mot..."
          class="w-full md:flex-1 px-4 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-[#00a8a3]"
          required
        />
        <button
          type="submit"
          class="bg-[#f46b5e] hover:bg-[#e25b4e] text-white px-6 py-2 rounded-lg shadow"
        >
          Rechercher
        </button>
      </form>

      <!-- Résultats -->
      <% if (Array.isArray(resultats) && resultats.length > 0) { %>
      <h3 class="text-xl font-semibold mb-6 text-gray-800">
        Résultats de recherche :
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <% resultats.forEach(mot => { %>
        <div class="bg-white rounded-xl p-5 shadow hover:shadow-lg transition">
          <h4 class="text-lg font-bold mb-2 text-[#f46b5e]"><%= mot.mot %></h4>
          <p class="mb-1">
            <strong>Définition :</strong> <%= mot.definition %>
          </p>
          <p class="mb-2"><strong>Catégorie :</strong> <%= mot.categorie %></p>
          <a
            href="<%= mot.video %>"
            target="_blank"
            class="text-blue-500 hover:underline"
          >
            Voir la vidéo
          </a>
        </div>
        <% }) %>
      </div>
      <% } else if (typeof resultats !== 'undefined') { %>
      <p class="text-center text-gray-500 px-4">Aucun résultat trouvé.</p>
      <% } %>

      <!-- Formulaire d'ajout -->
      <section class="bg-white rounded-xl p-4 shadow-lg mt-12">
        <h3 class="text-2xl font-semibold text-[#00a8a3] mb-4">
          Ajouter un nouveau mot
        </h3>
        <form
          action="/api/dictionnaire"
          method="POST"
          class="grid grid-cols-1 md:grid-cols-2 gap-4"
        >
          <div>
            <label class="block mb-1 font-medium">Mot</label>
            <input
              type="text"
              name="mot"
              required
              class="w-full px-4 py-2 border rounded focus:ring-[#00a8a3]"
            />
          </div>
          <div>
            <label class="block mb-1 font-medium">Définition</label>
            <input
              type="text"
              name="definition"
              required
              class="w-full px-4 py-2 border rounded focus:ring-[#00a8a3]"
            />
          </div>
          <div>
            <label class="block mb-1 font-medium">Catégorie</label>
            <input
              type="text"
              name="categorie"
              class="w-full px-4 py-2 border rounded focus:ring-[#00a8a3]"
            />
          </div>
          <div>
            <label class="block mb-1 font-medium">Lien vidéo</label>
            <input
              type="url"
              name="video"
              required
              class="w-full px-4 py-2 border rounded focus:ring-[#00a8a3]"
            />
          </div>
          <div class="md:col-span-2 text-right">
            <button
              type="submit"
              class="bg-[#00a8a3] hover:bg-[#00928e] text-white px-6 py-2 rounded-lg shadow"
            >
              Ajouter le mot
            </button>
          </div>
        </form>
      </section>
    </main>

    <!-- Footer -->
    <footer class="text-center text-sm text-gray-500 py-6">
      © 2025 - Projet éducatif LSF • Réalisé par Joris
    </footer>
  </body>
</html>
