<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <title><%= siteTitle %> - Dictionnaire</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Import Tailwind CSS -->
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <!-- Import d'une police similaire √† Open Sans -->
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap"
      rel="stylesheet"
    />

    <style>
      body {
        background-color: #fcf6f0;
        font-family: "Open Sans", sans-serif;
        color: #2b2b2b;
      }
    </style>
  </head>

  <body>
    <!-- üî∂ Barre de navigation -->
    <nav class="bg-[#f46b5e] text-white shadow">
      <div
        class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center"
      >
        <h1 class="text-lg md:text-xl font-bold">
          Langue des Signes Fran√ßaise
        </h1>
        <ul class="flex space-x-4 text-sm md:text-base">
          <li><a href="/" class="hover:underline">Accueil</a></li>
          <li>
            <a href="/dictionnaire" class="hover:underline">Dictionnaire</a>
          </li>
          <li><a href="/quiz" class="hover:underline">Quiz</a></li>
          <li><a href="/ressources" class="hover:underline">Ressources</a></li>
        </ul>
      </div>
    </nav>

    <!-- üü¢ Contenu principal -->
    <main class="max-w-5xl mx-auto px-4 py-12">
      <h2 class="text-3xl font-bold text-center text-[#00a8a3] mb-10">
        üìö Dictionnaire LSF
      </h2>

      <!-- üîç Barre de recherche -->
      <form
        action="/dictionnaire"
        method="GET"
        class="mb-10 flex flex-col md:flex-row items-center gap-4"
      >
        <input
          type="text"
          name="mot"
          placeholder="Rechercher un mot..."
          class="w-full md:flex-1 px-4 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-[#00a8a3]"
          required
        />
        <button
          type="submit"
          class="bg-[#f46b5e] hover:bg-[#e25b4e] text-white px-6 py-2 rounded-lg shadow"
        >
          üîç Rechercher
        </button>
      </form>

      <!-- ‚ûï Formulaire d'ajout -->
      <section class="bg-white rounded-xl p-6 shadow-lg mb-12">
        <h3 class="text-2xl font-semibold text-[#00a8a3] mb-4">
          Ajouter un nouveau mot
        </h3>
        <form
          action="/dictionnaire"
          method="POST"
          class="grid grid-cols-1 md:grid-cols-2 gap-4"
        >
          <div>
            <label class="block mb-1 font-medium">Mot</label>
            <input
              type="text"
              name="mot"
              required
              class="w-full px-4 py-2 border rounded focus:ring-[#00a8a3]"
            />
          </div>
          <div>
            <label class="block mb-1 font-medium">D√©finition</label>
            <input
              type="text"
              name="definition"
              required
              class="w-full px-4 py-2 border rounded focus:ring-[#00a8a3]"
            />
          </div>
          <div>
            <label class="block mb-1 font-medium">Cat√©gorie</label>
            <input
              type="text"
              name="categorie"
              class="w-full px-4 py-2 border rounded focus:ring-[#00a8a3]"
            />
          </div>
          <div>
            <label class="block mb-1 font-medium">Lien vid√©o</label>
            <input
              type="url"
              name="video"
              required
              class="w-full px-4 py-2 border rounded focus:ring-[#00a8a3]"
            />
          </div>
          <div class="md:col-span-2 text-right">
            <button
              type="submit"
              class="bg-[#00a8a3] hover:bg-[#00928e] text-white px-6 py-2 rounded-lg shadow"
            >
              ‚ûï Ajouter le mot
            </button>
          </div>
        </form>
      </section>

      <!-- üìã R√©sultats -->
      <% if (Array.isArray(resultats) && resultats.length > 0) { %>
      <h3 class="text-xl font-semibold mb-6 text-gray-800">
        R√©sultats de recherche :
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <% resultats.forEach(mot => { %>
        <div class="bg-white rounded-xl p-5 shadow hover:shadow-lg transition">
          <h4 class="text-lg font-bold mb-2 text-[#f46b5e]"><%= mot.mot %></h4>
          <p class="mb-1">
            <strong>D√©finition :</strong> <%= mot.definition %>
          </p>
          <p class="mb-2"><strong>Cat√©gorie :</strong> <%= mot.categorie %></p>
          <a
            href="<%= mot.video %>"
            target="_blank"
            class="text-blue-500 hover:underline"
          >
            ‚ñ∂Ô∏è Voir la vid√©o
          </a>
        </div>
        <% }) %>
      </div>
      <% } else if (typeof resultats !== 'undefined') { %>
      <p class="text-center text-gray-500">Aucun r√©sultat trouv√©.</p>
      <% } %>
    </main>

    <!-- üîö Footer -->
    <footer class="text-center text-sm text-gray-500 py-6">
      ¬© 2025 - Projet √©ducatif LSF ‚Ä¢ R√©alis√© par Joris
    </footer>
  </body>
</html>
